<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginTop="16dp"
    android:elevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/book_poster"
                android:layout_width="111dp"
                android:layout_height="182dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/book_example" />

            <View
                android:id="@+id/outline"
                android:layout_width="111dp"
                android:layout_height="182dp"
                android:background="@drawable/ic_item_outline_4dp" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="Война и мир"
                android:textColor="?attr/blackOrWhiteColor"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="Сезон 1 из 5"
                android:textColor="?attr/text_secondary" />


            <ProgressBar
                android:id="@+id/progressBar3"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="180dp"
                android:layout_height="0dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:progress="80" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/signInBtn"
                style="@style/ButtonStyle.Blue.AppStyle"
                android:layout_marginStart="0dp"
                android:layout_marginTop="42dp"
                android:layout_marginEnd="0dp"
                android:text="@string/enter" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>