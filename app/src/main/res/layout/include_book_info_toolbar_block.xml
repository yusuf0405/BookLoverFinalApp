<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="?attr/card_container_background"
    app:cardElevation="5dp"
    app:shapeAppearanceOverlay="@style/BottomCornerRadius.18">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"
        android:weightSum="1">

        <ImageView
            android:id="@+id/back_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_white_back" />

        <TextView
            android:id="@+id/toolbar_book_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:ellipsize="none"
            android:fadingEdgeLength="60dp"
            android:requiresFadingEdge="horizontal"
            android:singleLine="true"
            android:textSize="20sp"
            tools:text="@tools:sample/lorem/random" />

        <ImageView
            android:id="@+id/save_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/save_single_icon"
            app:tint="?attr/blackOrWhiteColor" />

        <ImageView
            android:id="@+id/more_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_more_vertical_icon" />
    </LinearLayout>


</com.google.android.material.card.MaterialCardView>