<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ModalPage" />

    <style name="ModalPage.Dialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/ModalPage.DialogWrapper</item>
    </style>

    <style name="ModalPage.DialogWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="ModalPage.Animation">
        <item name="android:windowEnterAnimation">@anim/animation_modal_page_slide_up</item>
        <item name="android:windowExitAnimation">@anim/animation_modal_page_slide_down</item>
    </style>
</resources>