<?xml version="1.0" encoding="utf-8"?>
<resources>

    <dimen name="text_size_small">12dp</dimen>
    <dimen name="text_size_mid">14dp</dimen>
    <dimen name="text_size_large">16dp</dimen>
    <dimen name="text_size_xlarge">20dp</dimen>
    <dimen name="text_size_player_title">18dp</dimen>
    <dimen name="text_size_player_subtitle">15dp</dimen>

    <style name="CustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="fontFamily">@font/poppins</item>
    </style>

    <style name="ToolbarTitleAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">16dp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="poppins_semi_bold_style">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?attr/blackOrWhiteColor</item>
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ToolbarSubtitleAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Subtitle">
        <item name="android:textSize">14dp</item>
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <style name="ActionBarTitle" parent="Base.TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>

    <style name="MineActionBarTitle" parent="Base.TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">17dp</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>

    <style name="ButtonTextStyle" parent="TextAppearance.AppCompat.Button">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">16dp</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>

    <style name="PhonotekaTitle">
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">-4dp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>
</resources>
