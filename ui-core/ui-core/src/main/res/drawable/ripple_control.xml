<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false" android:state_activated="false">
        <shape android:shape="oval">
            <solid android:color="@color/black_15_alpha"/>
            <stroke android:width="2dp" android:color="@color/black_8_alpha" />
        </shape>
    </item>
    <item android:state_activated="true">
        <shape android:shape="oval">
            <solid android:color="@color/red_active"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="@color/red_active"/>
            <stroke android:width="2dp" android:color="@color/black_15_alpha" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <solid android:color="@android:color/transparent"/>
            <stroke android:width="2dp" android:color="@color/black_15_alpha" />
        </shape>
    </item>
</selector>