<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_activated="true">
        <ripple android:color="@color/white_yandex_50_alpha">
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/gray_yandex"/>
                </shape>
            </item>
        </ripple>
    </item>
    <item android:state_selected="true">
        <ripple android:color="@color/white_yandex">
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/black_50_no_alpha"/>
                </shape>
            </item>
        </ripple>
    </item>
    <item>
        <ripple android:color="@color/white_yandex">
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/black_night"/>
                </shape>
            </item>
        </ripple>
    </item>
</selector>