<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:innerRadiusRatio="3"
            android:shape="ring"
            android:thicknessRatio="7"
            android:useLevel="false">
            <size
                android:width="14dip"
                android:height="14dip" />

            <gradient
                android:centerColor="?attr/customProgressBarCenterGradientColor"
                android:centerY="0.50"
                android:endColor="?attr/customProgressBarEndGradientColor"
                android:startColor="?attr/customProgressBarStartGradientColor"
                android:type="sweep"
                android:useLevel="false" />
        </shape>
    </item>

    <item
        android:bottom="6.1dp"
        android:left="12dp"
        android:right="0.7dp"
        android:top="6.1dp">
        <shape android:shape="oval">
            <solid android:color="?attr/customProgressBarBaseColor" />
        </shape>
    </item>

</layer-list>