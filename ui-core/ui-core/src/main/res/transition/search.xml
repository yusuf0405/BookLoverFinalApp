<?xml version="1.0" encoding="utf-8"?>
<!--suppress AndroidElementNotAllowed -->
<transitionSet xmlns:android="http://schemas.android.com/apk/res/android"
    android:duration="300"
    android:transitionOrdering="together">

    <slide android:slideEdge="top" android:interpolator="@android:interpolator/decelerate_cubic">
        <targets>
            <target android:targetId="@+id/search_view" />
        </targets>
    </slide>

    <fade android:duration="300" android:interpolator="@android:interpolator/accelerate_quint"/>

    <targets>
        <target android:excludeId="@android:id/statusBarBackground"/>
        <target android:excludeId="@android:id/navigationBarBackground"/>
    </targets>
</transitionSet>