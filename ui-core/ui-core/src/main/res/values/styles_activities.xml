<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.Lyrics" parent="AppTheme.Translucent">
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">@color/black_dark_night</item>
        <item name="android:windowBackground">@color/ui_kit_transparent</item>
        <item name="android:windowAnimationStyle">@style/LyricsAnimation</item>
    </style>

    <style name="AppTheme.Lyrics.Dark" parent="AppTheme.Dark">
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowBackground">@color/ui_kit_transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <!--
            Следующая строка закоментирована, после прочтения статьи в связи с появлением ошибки:
            java.lang.IllegalStateException: Only fullscreen opaque activities can request orientation
            href="https://stackoverflow.com/questions/48072438/java-lang-illegalstateexception-only-fullscreen-opaque-activities-can-request-o"
            Внешних различий в теме не видно.
        -->
        <!--item name="android:windowIsTranslucent">true</item-->
        <item name="android:windowAnimationStyle">@style/LyricsAnimation</item>
    </style>

    <style name="AppTheme.Welcome" parent="AppTheme.Dark">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppTheme.Search" parent="AppTheme">
        <!--<item name="android:windowExitTransition">@transition/slide_content_left</item>-->
        <item name="android:windowEnterTransition">@transition/search</item>
        <item name="android:windowReturnTransition">@transition/search_return</item>
        <item name="android:windowReenterTransition">@android:transition/no_transition</item>
    </style>

    <style name="AppTheme.Search.Dark" parent="AppTheme.Dark">
        <!--<item name="android:windowExitTransition">@transition/slide_content_left</item>-->
        <item name="android:windowEnterTransition">@transition/search</item>
        <item name="android:windowReturnTransition">@transition/search_return</item>
        <item name="android:windowReenterTransition">@android:transition/no_transition</item>
    </style>

    <style name="AppTheme.SlideTransition" parent="AppTheme">
        <!--fixme: disabled until ui is optimized-->
        <!--<item name="android:windowExitTransition">@transition/slide_content_left</item>-->
        <item name="android:windowEnterTransition">@transition/slide_content_right</item>
        <item name="android:windowReturnTransition">@transition/slide_content_right</item>
    </style>

    <style name="AppTheme.SlideTransition.Dark" parent="AppTheme.Dark">
        <item name="android:windowExitTransition">@transition/slide_content_left</item>
        <item name="android:windowEnterTransition">@transition/slide_content_right</item>
        <item name="android:windowReturnTransition">@transition/slide_content_right</item>
    </style>

    <style name="LyricsAnimation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
    </style>

</resources>