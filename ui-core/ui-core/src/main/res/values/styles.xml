<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="AppTheme.PoliteRipple" parent="AppTheme">
        <item name="colorPrimary">@color/darken_mask</item>
        <item name="colorControlHighlight">@color/ripple_material_dark</item>
    </style>

    <style name="progress_bar_with_pressed_thumb" parent="android:Widget.Holo.SeekBar">
        <item name="android:progressDrawable">@drawable/progress_bar</item>
        <item name="android:thumb">@drawable/seek_bar_square_thumb</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize8dp" parent="">
        <item name="cornerSize">8dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSizeCircle" parent="">
        <item name="cornerSize">4dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize4dp" parent="">
        <item name="cornerSize">4dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize16dp" parent="">
        <item name="cornerSize">16dp</item>
    </style>

    <style name="SeekBarPlayer">
        <item name="android:progressDrawable">?playerProgressBar</item>
        <item name="android:thumbTint">@color/red_active</item>
        <item name="android:minHeight">4dp</item>
        <item name="android:maxHeight">4dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
    </style>

    <style name="SeekBarExpandedPlayer" parent="android:Widget.Holo.SeekBar">
        <item name="android:progressDrawable">?expandedPlayerProgressBar</item>
        <item name="android:thumb">@drawable/expanded_player_small_thumb</item>
        <item name="android:minHeight">2dp</item>
        <item name="android:maxHeight">2dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">24dp</item>
    </style>

    <style name="SeekBarLyricsPlayer" parent="android:Widget.Holo.SeekBar">
        <item name="android:progressDrawable">?lyricsPlayerProgressBar</item>
        <item name="android:thumb">@drawable/expanded_player_small_thumb</item>
        <item name="android:thumbTint">?lyricsPlayerThumbColor</item>
        <item name="android:minHeight">2dp</item>
        <item name="android:maxHeight">2dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">24dp</item>
    </style>

    <style name="SlideDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_left_no_fade</item>
        <item name="android:windowExitAnimation">@anim/slide_out_right_no_fade</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="VerticalSlideDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_top</item>
        <item name="android:windowExitAnimation">@anim/slide_out_down</item>
    </style>

    <style name="FeedCard" parent="CardView">
        <item name="android:layout_marginLeft">@dimen/unit_margin</item>
        <item name="android:layout_marginRight">@dimen/unit_margin</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="cardBackgroundColor">?colorPrimary</item>
        <item name="cardCornerRadius">1dp</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="EventDay" parent="CardView">
        <item name="android:layout_marginLeft">@dimen/unit_margin</item>
        <item name="android:layout_marginRight">@dimen/unit_margin</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="cardBackgroundColor">?colorPrimary</item>
        <item name="cardCornerRadius">5dp</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="SearchResultCard" parent="FeedCard">
        <item name="cardElevation">0dp</item>
        <item name="cardMaxElevation">0dp</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="cardBackgroundColor">@android:color/transparent</item>
    </style>
    
    <style name="SettingsItem">
        <item name="android:minHeight">64dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/edge_margin</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:fontFamily">@font/mtssans_regular</item>
    </style>

    <style name="BottomNavigationViewTextStyle">
        <item name="android:fontFamily">@font/mtssans_regular</item>
    </style>

    <style name="MixButtonNewDigest">
        <item name="android:minHeight">50dp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:textSize">14dp</item>
        <item name="android:fontFamily">@font/mtssans_regular</item>
    </style>

    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:navigationBarColor">?attr/navigationBarColor</item>
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="LyricsBottomSheetDialogTheme" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="behavior_skipCollapsed">true</item>
        <item name="behavior_fitToContents">true</item>
        <item name="behavior_peekHeight">1000dp</item>
        <item name="behavior_hideable">true</item>
    </style>

    <style name="FedukBottomSheetDialogTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="behavior_skipCollapsed">true</item>
        <item name="behavior_fitToContents">true</item>
        <item name="behavior_peekHeight">1000dp</item>
        <item name="behavior_hideable">true</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:navigationBarColor">?attr/navigationBarColor</item>
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
        <item name="behavior_peekHeight">@dimen/bottom_sheet_dialog_peek_height_new_modal_dialog</item>
    </style>

    <style name="MineCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">@font/mtssans_regular</item>
        <item name="fontFamily">@font/mtssans_regular</item>
    </style>

    <style name="RedesignedTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">?attr/textSizeLarge</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/mtssans_medium</item>
        <item name="android:textAllCaps">true</item>
        <item name="textAllCaps">false</item>
        <item name="textColor">@color/tabs_text_idicator</item>
    </style>

    <style name="TabLayoutSingleLineTitle" parent="@style/AppTheme">
        <item name="android:singleLine">true</item>
    </style>

    <style name="RadioInternetCornerRadius">
        <item name="cornerSize">8dp</item>
    </style>

    <style name="CategoryCornerRadius">
        <item name="cornerSize">12dp</item>
    </style>

    <style name="CategoryInnerCornerRadius">
        <item name="cornerSize">12dp</item>
    </style>

    <style name="AppTheme.ClearStatusBar" parent="AppTheme">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">false</item>
    </style>

    <style name="SplashScreenTheme" parent="AppTheme">
        <item name="android:background">@drawable/background_splash</item>
    </style>

</resources>
